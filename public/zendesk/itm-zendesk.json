  "features": [
    {
      "trigger": "event",
      "connector": "itm-zendesk",
      "AccountId": "@@AccountId@@",
      "entity": "Task",
      "description": "Task update Event, which will update 'Ticket' in Zendesk",
      "condition": "input.diff.StatusName != null && Convert.ToString(input.diff.StatusName.new) == \"Done\"",
      "event": "updated",
      "async": true,
      "actions": [
        {
          "action": "restcall",
          "url": "@@TaskMS@@/v2/{{ input.accountId }}/Projects/{{ input.projectId }}/Tasks/{{ input.task.Id }}",
          "method": "POST",
          "description": "(1) Getting CustomFields values for project of ITM.",
          "output": "customfields",
          "payload": "{\"columns\":{\"$in\":[\"AllCustomFields\"]}}",
          "dataType": "application/json"
        },
        {
          "action": "restcall",
          "url": "https://{{ config.zendeskURL }}.zendesk.com/api/v2/users/search.json?query={{ config.front_desk_support_email }}",
          "method": "GET",
          "payload": "",
          "description": "Update Zendesk Ticket",
          "output": "frontDeskSupportUsersOutput",
          "dataType": "application/json",
          "authentication": "basic",
          "username": "{{ config.email }}/token",
          "password": "{{ config.token }}"
        },
        {
          "action": "restcall",
          "url": "https://{{ config.zendeskURL }}.zendesk.com/api/v2/tickets/{{ int customfields.AllCustomFields.TicketURL }}.json",
          "method": "PATCH",
          "description": "Update Zendesk Ticket",
          "output": "zendeskResponse",
          "condition": "Convert.ToInt32(frontDeskSupportUsersOutput.count) > 0 && customfields.AllCustomFields != null && Convert.ToString(customfields.AllCustomFields.TicketURL) != null",
          "payload": "{\"ticket\":{\"assignee_id\":\"{{ frontDeskSupportUsersOutput.users.0.id }}\",\"comment\":{\"body\":\"Ticket reassigned back to Front Desk Support.\",\"public\":false}}}",
          "dataType": "application/json",
          "authentication": "basic",
          "username": "{{ config.email }}/token",
          "password": "{{ config.token }}"
        },
        {
          "action": "restcall",
          "url": "@@TaskMS@@/v2/{{ input.accountId }}/Projects/{{ input.projectId }}/Tasks/Search",
          "method": "POST",
          "description": "Check if task exists before",
          "output": "taskOutput",
          "condition": "input.ticket.ticketAssigneeEmail != null && input.ticket.ticketAssigneeEmail == config.front_desk_support_email",
          "payload": "{\"columns\":{\"$in\":[\"AllCustomFields\"]}}",
          "dataType": "application/json"
        },
        {
          "action": "restcall",
          "url": "@@TaskMS@@/v2/{{ input.accountId }}/Projects/{{ input.projectId }}/Tasks/{{ input.ticket.ticketURL }}",
          "method": "PATCH",
          "description": "Update Existing Task",
          "output": "taskOutput",
          "condition": "taskOutput.total > 0 && taskOutput.list.AllCustomFields != null && taskOutput.list.AllCustomFields.TicketURL != null && taskOutput.list.AllCustomFields.TicketURL == input.ticket.ticketURL",
          "payload": "{\"Name\":\"{{input.ticket.name}}\",\"StatusName\":\"{{ map config.mapping.taskstatus.external input.ticket.status }}\",\"Details\":\"input.ticket.description\"}",
          "dataType": "application/json"
        },
        {
          "action": "restcall",
          "url": "@@TaskMS@@/v2/{{ input.accountId }}/Projects/{{ input.projectId }}/Tasks",
          "method": "POST",
          "description": "Create New Task",
          "output": "taskOutput",
          "condition": "taskOutput.total == 0 ||  taskOutput.list.AllCustomFields == null || && taskOutput.list.AllCustomFields.TicketURL == null || taskOutput.list.AllCustomFields.TicketURL != input.ticket.ticketURL",
          "payload": "{\"Name\":\"{{input.ticket.name}}\",\"StatusName\":\"{{ map config.mapping.taskstatus.external input.ticket.status }}\",\"TypeName\":\"Generic\",\"PriorityName\":\"Normal\",\"CustomField\":[{\"CustomFieldBaseId\":8027,\"CustomFieldValue\":\"27\",\"CustomFieldTypeName\":\"Text\"}],\"StartDate\":\"2024-11-20\",\"EndDate\":\"2025-01-24\",\"KindId\":3}",
          "dataType": "application/json"
        }
      ]
    }
  ],
